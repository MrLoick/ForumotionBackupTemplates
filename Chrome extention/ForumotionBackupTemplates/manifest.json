{
    "manifest_version": 2,

    "name": "Forumotion backup templates",
    "description": "Export & Import forumotion Templates",
    "version": "1.0",

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        }
    },

    "content_scripts": [
        {
            "matches": [
                "http://*/admin/index.forum?mode=export&*"
            ],
            "css": [
                "fbtStyle.css"
            ],
            "js": [
                "jquery.min.js",
                "jszip.min.js",
                "jszip-utils.min.js",
                "FileSaver.min.js",
                "ForumotionBackupTemplates.js"
            ]
        }
    ],

    "options_page": "options.html",

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "storage",
        "notifications",
        "tabs",
        "http://*/admin/index.forum?mode=export&*"
    ]
}